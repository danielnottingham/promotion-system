<h3>Buscar uma promoção</h3>
<%= form_tag(promotions_path, :method => :get, class: "form-inline my-2 my-lg-0") do %>
  <p>
    <%= text_field_tag :search_by_name, params[:search_by_name], placeholder: 'Pesquisa', class: "form-control mr-sm-2"  %>
    <%= submit_tag 'Buscar', class: "btn btn-outline-success my-2 my-sm-0" %>
  </p>
<% end %>

<% if @promotions.empty? %>
  <h3>Nenhuma promoção cadastrada</h3>
<% end %>

<h1>Lista de Promoções</h1>
<table class="table table-bordered border-primary">
  <thead class="table-dark">
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Desc. em porcentagem</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= link_to promotion.name, promotion %></td>
        <td><%= promotion.description %></td>
        <td><%= number_to_percentage promotion.discount_rate, separator: ',', precision: 2 %></td>
        <td><%= link_to 'Deletar', promotion, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
