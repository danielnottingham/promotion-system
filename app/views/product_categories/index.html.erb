<h1>Lista de Categorias</h1>

<table class="table table-bordered border-primary">
  <thead class="table-dark">
    <tr>
      <th>Nome</th>
      <th>Código</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @product_categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.code %></td>
        <td><%= link_to 'Deletar', category, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<%= link_to 'Voltar', root_path %> |

<%= link_to 'Registrar Categoria', new_product_category_path %>